{
    "name": "sepiphy/laraveltools",
    "description": "Provide helpful features for Laravel projects.",
    "keywords": ["sepiphy", "laravel", "laraveltools"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/sepiphy/laraveltools",
    "support": {
        "issues": "https://github.com/sepiphy/laraveltools/issues",
        "source": "https://github.com/sepiphy/laraveltools"
    },
    "authors": [
        {
            "name": "Quynh Xuan Nguyen",
            "email": "seriquynh@gmail.com",
            "homepage": "https://seriquynh.com",
            "role": "Software Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/console": "5.8.*",
        "illuminate/contracts": "5.8.*",
        "illuminate/database": "5.8.*",
        "illuminate/http": "5.8.*",
        "illuminate/support": "5.8.*",
        "illuminate/filesystem": "5.8.*"
    },
    "replace": {
        "sepiphy/laravel-console": "self.version",
        "sepiphy/laravel-contracts": "self.version",
        "sepiphy/laravel-repositories": "self.version",
        "sepiphy/laravel-support": "self.version"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.1",
        "phpstan/phpstan": "^0.11",
        "phpunit/phpunit": "^7.5|^8.0",
        "xuanquynh/php-codesniffer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Sepiphy\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sepiphy\\Laravel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "XuanQuynh\\CodeSniffer\\ComposerScripts::postAutoloadDump"
        ],
        "fix": [
            "@php vendor/bin/php-cs-fixer fix",
            "@php vendor/bin/phpcbf src --standard=Laravel"
        ],
        "test": [
            "@php vendor/bin/phpcs src --standard=Laravel",
            "@php vendor/bin/phpstan analyse src tests --no-progress",
            "@php vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
